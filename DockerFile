#a
FROM ubuntu:latest
#b
ENV VERSION=1.2.0

RUN apt-get update
    #c
    apt install python3 -y
    #d+e+f
    apt-get install vim zip unzip

WORKDIR /usr/app/src

COPY print.py ./
#g
COPY zip_job.py /tmp/

ENTRYPOINT ["python","./zip_job.py"]

#h as the container is up run hostnamectl to print print OS type and architecture 
#also check if python file exists.
RUN hostnamectl
    docker exec -it $containerId test -f /tmp/zip_job.py
